{% extends 'base.html.twig' %}

{%  block title "Toutes les recettes" %}

{% block body %}
    <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Nobis aliquid debitis, quis itaque minima doloremque delectus commodi eligendi eaque, ut facere voluptates explicabo aut sunt ab at dolores nostrum suscipit eius vero. </p>
    <p>
        <a class="btn btn-primary btn-sm" href="{{ path('recipe.create') }}" role="button">Ajouter une recette</a>
    </p>
    <table class="table">
        <thead>
            <th>Titre</th>
            <th>Actions</th>
        </thead>
        <tbody>
        {% for recipe in recipes %}
        <tr>
            <td>
                <a href="{{ path('recipe.show', {id: recipe.id, slug: recipe.slug}) }}">{{ recipe.title }}</a>
            </td>
            <td>
                <div class="d-flex gap-1">
                    <a class="btn btn-primary btn-sm" href="{{ path('recipe.edit', {id: recipe.id}) }}">Editer</a>
                    <form action="{{ path('recipe.delete', {id: recipe.id}) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                    </form>
                </div>
            </td>
        </tr>
        {% endfor %}
    </table>
{% endblock %}